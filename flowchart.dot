    InsertCard [label="Kart Takıldı"];
    EnterPIN [label="PIN Gir"];
    CheckPIN [shape=diamond, label="PIN Doğru mu?"];
    WrongPIN [label="Hatalı PIN\nDeneme sayısını arttır"];
    TryAgain [shape=diamond, label="Deneme < 3 mü?"];
    Blocked [shape=ellipse, label="Kart Bloke Edildi\nBİTİR"];
    Menu [label="ANA MENÜ:\n1-Bakiye\n2-Para Çek\n3-Çıkış"];
    Choice [shape=diamond, label="Seçim nedir?"];
